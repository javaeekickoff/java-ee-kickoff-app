<?xml version="1.0" encoding="UTF-8"?>
<faces-config
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2"
>
	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>nl</supported-locale>
			<supported-locale>de</supported-locale>
		</locale-config>
		<message-bundle>org.example.kickoff.i18n.ApplicationBundle</message-bundle>
		<resource-bundle>
			<base-name>org.example.kickoff.i18n.ApplicationBundle</base-name>
			<var>i18n</var>
		</resource-bundle>

		<resource-handler>org.example.kickoff.view.resourcehandler.ResourceHandlerImplPatch</resource-handler>
		<resource-handler>org.omnifaces.resourcehandler.CombinedResourceHandler</resource-handler>
 		<view-handler>org.example.kickoff.view.viewhandler.LocaleAwareViewHandler</view-handler>
<!-- 
 		<view-handler>org.omnifaces.viewhandler.NoAutoGeneratedIdViewHandler</view-handler>
 -->
	</application>

	<factory>
		<exception-handler-factory>org.omnifaces.exceptionhandler.FullAjaxExceptionHandlerFactory</exception-handler-factory>
	</factory>

	<lifecycle>
		<phase-listener>org.example.kickoff.view.phaselistener.FacesRequestLoggerPatch</phase-listener>
	</lifecycle>

	<render-kit>
	    <renderer>
	    	<description>Disable PrimeFaces HeadRenderer as per http://stackoverflow.com/q/32352869/157882</description>
	        <component-family>jakarta.faces.Output</component-family>
	        <renderer-type>jakarta.faces.Head</renderer-type>
	        <renderer-class>com.sun.faces.renderkit.html_basic.HeadRenderer</renderer-class>
	    </renderer>
	</render-kit>
</faces-config>